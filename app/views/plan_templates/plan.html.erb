<article>
  <header>Share your plan</header>

  <form action="/share_plan" method="post">

    <label for="going_to_field">Going to</label>
    <select id="going_to_field" name="going_to_param" required>
      <option value="" disabled selected>Select an airport</option>
      <option value="ORD">ORD</option>
      <option value="MDW">MDW</option>
    </select>

    <label for="leaving_from_field">Leaving from</label>
    <select id="leaving_from_field" name="leaving_from_param" required>
      <option value="" disabled selected>Select a dorm</option>
      <option value="MAX">Max P</option>
      <option value="WDL">Woodlawn</option>
    </select>

    <label for="date_field">Date</label>
    <input id="date_field" type="date" name="date_param">

    <label for="time_field">Leaving UChicago at (24h format)</label>
    <input id="time_field" type="time" name="time_param">

    <button>Share</button>
  </form>
</article>
